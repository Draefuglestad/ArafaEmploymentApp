@model ArafaEmploymentApp.Models.References

@{
    ViewData["Title"] = "References";
}

</br><button type="button" id="sidebarCollapse" class="btn btn-secondary" onclick="toggleSidebar()">
    <i class="fas fa-align-left"></i>
    <span>Toggle Sidebar</span>
</button>

<section class="header"><h3>References</h3></section>

<hr />
<h4>References are recommended but not required.</h4></br>
<main class="container">
    <button type="button" id="referencesAddButton" onclick="duplicateReference()" style="float: right">Add a reference</button>
    <form asp-action="References">
        <div id="reference">
            <h5>Reference</h5>
            <div class="form-row">
                <div class="form-group col-4">
                    <label asp-for="ReferenceFullName" class="control-label"></label>
                    <input asp-for="ReferenceFullName" class="form-control" />
                    <span asp-validation-for="ReferenceFullName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ReferenceEmail" class="control-label"></label>
                    <input asp-for="ReferenceEmail" class="form-control" />
                    <span asp-validation-for="ReferenceEmail" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ReferencePhoneNumber" class="control-label"></label>
                    <input asp-for="ReferencePhoneNumber" class="form-control" />
                    <span asp-validation-for="ReferencePhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <center>
                <input type="submit" value="Save and Continue" class="btn btn-secondary" /></br>
            </center>
        </div>

    </form>
</main>
