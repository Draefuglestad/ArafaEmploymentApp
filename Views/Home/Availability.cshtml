@model ArafaEmploymentApp.Models.Availability

@{
    ViewData["Title"] = "Availability";

}

<main class="container">
    <form method="post">
        </br><button type="button" id="sidebarCollapse" class="btn btn-secondary" onclick="toggleSidebar()">
            <i class="fas fa-align-left"></i>
            <span>Toggle Sidebar</span>
        </button>

        <section class="header"><h3>Availability</h3></section><hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DaysAvailable" class="control-label"></label>
            <input asp-for="DaysAvailable" class="form-control" />
            @*<span asp-validation-for="DaysAvailable" class="text-danger"></span>*@
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="DesiredEmployment" class="control-label"></label>
                <input asp-for="DesiredEmployment" class="form-control" />
                @*<span asp-validation-for="DesiredEmployment" class="text-danger"></span>*@
            </div>

            <div class="form-group col-6">
                <label asp-for="HoursAvailable" class="control-label"></label>
                <input asp-for="HoursAvailable"
                       oninput="this.value = !!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null"
                       class="form-control" />
                <span asp-validation-for="HoursAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
       
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="WorkNights" /> @Html.DisplayNameFor(model => model.WorkNights)
            </label>
        </div>

        <div class="form-group">
            <center>
                <input type="submit" value="Save and Continue" class="btn btn-secondary" /></br>
            </center>
        </div>
    </form>
</main>


