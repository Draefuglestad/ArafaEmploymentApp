@model ArafaEmploymentApp.Models.Education

@{
    ViewData["Title"] = "Education";
}

<main class="container">
    <form asp-action="Education">
        </br><button type="button" id="sidebarCollapse" class="btn btn-secondary" onclick="toggleSidebar()">
            <i class="fas fa-align-left"></i>
            <span>Toggle Sidebar</span>
        </button>

        <section class="header"><h3>Education</h3></section><hr />
        <div class="form-group">
            <label asp-for="AdditionalEducation" class="control-label"></label>
            <input asp-for="AdditionalEducation" class="form-control" />
            <span asp-validation-for="AdditionalEducation" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="SchoolName" class="control-label"></label>
                <input asp-for="SchoolName" class="form-control" />
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="SchoolState" class="control-label"></label>
                    <input asp-for="SchoolState" class="form-control" />
                </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="HighestEducationEarned" class="control-label"></label>
                <select asp-for="HighestEducationEarned" class="form-control">
                    <option value="HighSchool">High School</option>
                    <option value="GED">GED</option>
                    <option value="Assoc">Associates</option>
                    <option value="Bach">Bachelors</option>
                    <option value="MS">Masters</option>
                    <option value="PHD">Post Doc</option>
                </select>
            </div>
            <div class="form-group col-6">
                <label asp-for="GraduationDate" class="control-label"></label>
                <input asp-for="GraduationDate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <center>
                <input type="submit" value="Save and Continue" class="btn btn-secondary" /></br>
            </center>
        </div>
    </form>
</main>
